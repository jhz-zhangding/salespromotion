<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/size_660dp"
    android:layout_height="@dimen/size_450dp"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@drawable/tanchuang_bg"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/import_progress_btn"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/size_300dp"
        android:layout_height="@dimen/size_50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_100dp"
        android:gravity="center"
        android:max="100"
        android:progressDrawable="@drawable/progressbar_color"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/import_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_50dp"
        android:text="@string/please_input"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_28" />

    <Button
        android:id="@+id/cancel_import_btn"
        android:layout_width="@dimen/size_150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_40dp"
        android:background="@drawable/btn_normal"
        android:text="@string/know"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_20" />

</LinearLayout>