<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_bg_color"
        android:orientation="horizontal"
        android:padding="@dimen/padding_15">

        <TextView
            android:id="@+id/face_action_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding"
            android:gravity="center"
            android:padding="@dimen/padding"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_30" />

        <TextView
            android:id="@+id/face_action_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_30"
            android:gravity="center"
            android:padding="@dimen/padding"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_30" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/tvFaces"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_80"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_30"
            android:padding="@dimen/padding" />

    </LinearLayout>

    <GridView
        android:id="@+id/add_grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/botton_rec_bg"
        android:horizontalSpacing="@dimen/padding_5"
        android:listSelector="@color/color_transparent"
        android:numColumns="4"
        android:padding="@dimen/padding"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/padding_5" />


</LinearLayout>