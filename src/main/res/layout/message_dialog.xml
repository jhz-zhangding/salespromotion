<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_35"
    android:paddingLeft="@dimen/padding_35"
    android:paddingRight="@dimen/padding_35"
    android:paddingTop="@dimen/padding_35"
    >

    <LinearLayout
        android:id="@+id/title_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/custom_dialog_title_img"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_30" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_weight="3"
        android:gravity="center"
        android:scrollbars="vertical"
        android:textColor="@color/white"
        android:textSize="26sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_25"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancle"
            style="@style/text_nomal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="130dp"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:minWidth="100dp"
            android:paddingBottom="@dimen/padding_15dp"
            android:paddingTop="@dimen/padding_15dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_26" />

        <TextView
            android:id="@+id/tv_ok"
            style="@style/text_nomal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:minWidth="100dp"
            android:paddingBottom="@dimen/padding_15dp"
            android:paddingTop="@dimen/padding_15dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_26" />
    </LinearLayout>
</LinearLayout>