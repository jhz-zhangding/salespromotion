<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page_view_3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="1000dp"
        android:layout_height="550dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/blue">

        <RelativeLayout
            android:id="@+id/first_activity_name_rl"
            android:layout_width="800dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/white_dashed">

            <TextView
                android:id="@+id/first_product_activity_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="30dp"
                android:text="@string/activity_text"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/first_product_detail_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/first_product_activity_tv"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/black" />
        </RelativeLayout>


        <TextView
            android:id="@+id/first_activity_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_activity_name_rl"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:text="@string/activity_text1"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_activity_tv"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#A230cc"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/activity1"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#848A73"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/activity2"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </LinearLayout>


        <TextView
            android:id="@+id/first_next_btn_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="85dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/next_step_bg"
            android:drawableLeft="@mipmap/next_step"
            android:drawablePadding="3dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="@string/next_step"
            android:textColor="@color/white"
            android:textSize="28sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="160dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:src="@mipmap/third_step_img" />
    </LinearLayout>

</RelativeLayout>