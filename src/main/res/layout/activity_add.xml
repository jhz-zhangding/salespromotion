<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <Button
            android:id="@+id/add_save_btn"
            android:layout_width="@dimen/padding_120"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_20"
            android:background="@drawable/btn_press"
            android:padding="@dimen/padding_10"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_26" />

        <TextView
            android:id="@+id/add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加词条"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_30" />


        <TextView
            android:id="@+id/add_back"
            android:layout_width="@dimen/padding_120"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_30"
            android:layout_marginRight="@dimen/padding_40"
            android:background="@drawable/btn_press"
            android:gravity="center"
            android:padding="@dimen/padding_10"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_26" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="@dimen/size_300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_marginBottom="@dimen/padding_20">

        <LinearLayout
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_normal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/main_bg_color"
                android:gravity="center"
                android:text="添加内容"
                android:textColor="@color/white"
                android:textSize="26sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_20"
                android:background="@color/color_cec8c8" />

            <LinearLayout

                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_35"
                android:paddingRight="@dimen/padding_35">


                <TextView
                    android:id="@+id/say_value_btn"
                    style="@style/text_face_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting_button_bg"
                    android:checked="true"
                    android:padding="@dimen/padding_10"
                    android:text="迎宾语" />


                <TextView
                    android:id="@+id/light_value_btn"
                    style="@style/text_face_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:background="@drawable/setting_button_bg"
                    android:padding="@dimen/padding_10"
                    android:text="灯带"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/add_face_btn"
                    style="@style/text_face_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:background="@drawable/setting_button_bg"
                    android:padding="@dimen/padding_10"
                    android:text="@string/faceValue"


                    />


                <TextView
                    android:id="@+id/add_action_btn"
                    style="@style/text_face_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:background="@drawable/setting_button_bg"
                    android:padding="@dimen/padding_10"
                    android:text="@string/action_value"

                    />

                <TextView
                    android:id="@+id/add_create_script"
                    style="@style/text_face_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:background="@drawable/rdiobutton_bg"
                    android:padding="@dimen/padding_10"
                    android:text="创建动作"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvAddMedia"
                    style="@style/text_face_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:background="@drawable/setting_button_bg"
                    android:padding="@dimen/padding_10"
                    android:text="自定义" />

                <TextView
                    android:id="@+id/tvAddDance"
                    style="@style/text_face_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:background="@drawable/setting_button_bg"
                    android:padding="@dimen/padding_10"
                    android:text="舞蹈" />


                <TextView
                    android:id="@+id/totalTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center"
                    android:padding="@dimen/padding_10"
                    android:text="播放总时长："
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_26" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:layout_marginBottom="@dimen/padding_20"
        android:layout_marginRight="@dimen/padding_20"
        android:layout_toRightOf="@+id/rel"
        android:background="@drawable/btn_normal"
        android:paddingLeft="@dimen/padding_35"
        android:paddingRight="@dimen/padding_35"
        android:paddingTop="@dimen/padding_35">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/relSay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSayTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_35"
                    android:text="语音时长：0秒"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_26" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="@dimen/padding_10">

                    <EditText
                        android:id="@+id/add_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_border_bg"
                        android:hint="请输入字符"
                        android:minHeight="250dp"
                        android:padding="@dimen/padding_15"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_26" />

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/add_edit_person_name_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="插入："
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/add_edit_goods_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="#3399ff"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/add_edit_goods_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="#3399ff"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/add_edit_goods_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="#3399ff"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>
                <!--<ListView-->
                <!--android:id="@+id/add_prepare_say_words_lv"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="35dp"-->
                <!--android:layout_marginRight="35dp"-->
                <!--android:divider="#00000000"-->
                <!--android:dividerHeight="5dp"-->
                <!--/>-->

            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/relBelt"
            android:layout_width="@dimen/padding_540"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/padding_35"
            android:layout_marginLeft="@dimen/margin_100"
            android:layout_marginTop="@dimen/padding_30"
            android:visibility="gone">

            <RadioGroup
                android:id="@+id/add_light_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/add_light_close"
                    style="@style/text_face_author"
                    android:layout_width="@dimen/padding_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="关"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/add_light_open"
                    style="@style/text_face_author"
                    android:layout_width="@dimen/padding_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="常亮"
                    android:textColor="@color/white" />


                <RadioButton
                    android:id="@+id/add_light_flicker"
                    style="@style/text_face_author"
                    android:layout_width="@dimen/padding_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="闪烁"
                    android:textColor="@color/white" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_light_group"
                android:layout_marginTop="@dimen/padding_15"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/open_text"
                    android:layout_width="@dimen/padding_0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="持续时间(S)"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_26" />

                <Spinner
                    android:id="@+id/open_light_spin"
                    android:layout_width="@dimen/padding_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/light"
                    android:textSize="@dimen/textsize_26" />

                <Spinner
                    android:id="@+id/flicker_light_spin"
                    android:layout_width="@dimen/padding_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/light"
                    android:textSize="@dimen/textsize_26" />
            </LinearLayout>
        </RelativeLayout>

        <include
            android:id="@+id/face_action"
            layout="@layout/face_action_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            android:id="@+id/addMeida"
            layout="@layout/addmedia_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            android:id="@+id/addDance"
            layout="@layout/adddance_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <!--<include-->
        <!--layout="@layout/bodycustom_action"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->
