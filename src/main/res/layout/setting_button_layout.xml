<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="25dp"
    >

    <LinearLayout
        android:id="@+id/rlImport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="70dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/more_button_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导入" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/import_1"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>

        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#D3E0ED" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rlExport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/more_button_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导出" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/export_1"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>

        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#D3E0ED" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rlDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/more_button_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/delete_1"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>

        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#D3E0ED" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rlCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/more_button_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新建" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/create_1"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>

        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#D3E0ED" />
    </LinearLayout>

</LinearLayout>