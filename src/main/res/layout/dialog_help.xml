<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/main_bg">

        <!--<ImageView-->
        <!--android:id="@+id/dialog_image"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@mipmap/dialog_help_image"-->
        <!--android:layout_gravity="center"-->
        <!--android:scaleX="1.3"-->
        <!--android:scaleY="1.3"-->
        <!--android:layout_marginTop="30dp"-->
        <!--/>-->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="180dp"
            android:background="@mipmap/dialog_help_image1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="400dp"
            android:layout_marginTop="-80dp"
            android:background="@mipmap/dialog_help_image2"
            android:scaleX="0.9"
            android:scaleY="0.9" />


        <ImageView
            android:id="@+id/dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/dialog_help_close"
            android:padding="5dp"
            android:scaleX="0.8"
            android:scaleY="0.8" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/dialog_help_remind" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="使用促销助手时，建议将DIY"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/diy_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置为正常模式(非免打扰模式或空鼠模式)"
                android:textColor="@color/white"
                android:textSize="22sp" />

        </LinearLayout>

    </FrameLayout>


</LinearLayout>